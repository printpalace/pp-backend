{
  "name": "print-palace-backend",
  "version": "0.0.1",
  "description": "Backend for PrintPalace project",
  "main": "server.js",
  "author": "Print Palace",
  "scripts": {
    "start": "npm run build && set NODE_ENV=prod && node ./build/src/server.js",
    "dev": "set NODE_ENV=dev && node ./node_modules/nodemon/bin/nodemon ./src/server.ts",
    "db": "bash ./startMongoInDocker.sh",
    "build": "node ./node_modules/typescript/bin/tsc",
    "lint": "node ./node_modules/tslint/bin/tslint -c ./tslint.json \"./src/**/*.ts\" || true",
    "test": "set NODE_ENV=test && mocha \"./test/**/*.test.ts\" --require ./node_modules/ts-node/register || true",
    "cover": "node ./node_modules/nyc/bin/nyc npm run test"
  },
  "devDependencies": {
    "@types/bcrypt": "0.0.30",
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/cookie-parser": "^1.3.30",
    "@types/cors": "0.0.33",
    "@types/debug": "0.0.29",
    "@types/dotenv": "^2.0.19",
    "@types/express": "^4.0.34",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^7.1.33",
    "@types/lodash": "^4.14.41",
    "@types/mocha": "^2.2.33",
    "@types/mongoose": "^4.6.2",
    "@types/node": "^6.0.51",
    "@types/request": "0.0.34",
    "@types/winston": "0.0.32",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.2",
    "typescript": "^2.0.10"
  },
  "dependencies": {
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "debug": "^2.3.3",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-validator": "^3.0.0",
    "express-winston": "^2.0.0",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.17.2",
    "mongoose": "^4.7.0",
    "request": "^2.79.0",
    "winston": "^2.3.0",
    "winston-daily-rotate-file": "^1.4.0"
  }
}
